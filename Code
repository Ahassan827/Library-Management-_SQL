## Relationship Creation


Alter table dbo.employees
add constraint branch_employeee_fk foreign key (branch_id)
references dbo.branches(branch_id)


alter table dbo.issued_status
alter column issued_member_id varchar (10)


Alter table dbo.issued_status
add constraint status_member_fk foreign key (issued_member_id)
references dbo.members(member_id)

Alter table dbo.issued_status
add constraint status_book_fk foreign key (issued_book_isbn)
references dbo.books (isbn)


Alter table dbo.issued_status
add constraint status_employee_fk foreign key (issued_emp_id)
references dbo.employees (emp_id)

alter table return_status
alter column return_book_isbn varchar (50) null


alter table return_status
alter column issued_id varchar (10) 

DELETE FROM return_status
WHERE Return_id = 'RS101';

SELECT *
FROM dbo.return_status
WHERE issued_id NOT IN (SELECT issued_id FROM dbo.issued_status);

DELETE FROM dbo.return_status
WHERE issued_id NOT IN (SELECT issued_id FROM dbo.issued_status);

Alter table dbo.return_status
add constraint return_issued_id foreign key (issued_id)
references dbo.issued_status (issued_id)



## CRUD Operations


----Create a New Book Record -- "978-1-60129-456-2', 'To Kill a Mockingbird', 'Classic', 6.00, 'yes', 'Harper Lee', 'J.B. Lippincott & Co.')"

INSERT INTO books(isbn, book_title, category, rental_price, status, author, publisher)
VALUES('978-1-60129-456-2', 'To Kill a Mockingbird', 'Classic', 6.00, 'yes', 'Harper Lee', 'J.B. Lippincott & Co.');
SELECT * FROM books;


-----  Update an Existing Member's Address

UPDATE members
SET member_address = '125 Oak St'
WHERE member_id = 'C103';

----- Delete a Record from the Issued Status Table -- Objective: Delete the record with issued_id = 'IS121' from the issued_status table.
DELETE FROM issued_status
WHERE   issued_id =   'IS121';


------ Retrieve All Books Issued by a Specific Employee -- Objective: Select all books issued by the employee with emp_id = 'E101'.

SELECT * FROM issued_status
WHERE issued_emp_id = 'E101'

------List Members Who Have Issued More Than One Book -- Objective: Use GROUP BY to find members who have issued more than one book.

SELECT
    issued_emp_id,
    COUNT(*)
FROM issued_status
GROUP BY issued_emp_id
HAVING COUNT(*) > 1


## CTAS 

----Create Summary Tables: Used CTAS to generate new tables based on query results - each book and total book_issued_cnt

Select b.isbn , b.book_title, count(ist.issued_id) as issue_count
into book_issued_cnt
from dbo.issued_status  ist
join books  b
on ist.issued_book_isbn=b.isbn
group by b.isbn , b.book_title


Select *
from dbo.book_issued_cnt


 ## Data Analysis



---- Retrieve All Books in a Specific Category

SELECT *
FROM books
WHERE category = 'Classic';

------- Find Total Rental Income by Category:

SELECT 
    b.category,
    SUM(b.rental_price),
    COUNT(*)
FROM 
issued_status as ist
JOIN
books as b
ON b.isbn = ist.issued_book_isbn
GROUP BY b.category


------List Members Who Registered in the Last 180 Days

SELECT * FROM members
WHERE reg_date >= dateadd(DAY,-180,getdate())


INSERT INTO members(member_id , member_name,member_address,reg_date)
VALUES('c118','sam','133 Pine St' , '2025-06-01'),
('C119', 'John', '143 Main St', '2025-5-01')
SELECT * FROM members;

update members
set reg_date= dateadd(year,1,reg_date)
where year(reg_date)=2024


-----List Employees with Their Branch Manager's Name and their branch details:

SELECT 
    e1.emp_id,
    e1.emp_name,
    e1.position,
    e1.salary,
    b.*,
    e2.emp_name as manager
FROM employees  e1
JOIN 
branches b
ON e1.branch_id = b.branch_id    
JOIN
employees  e2
ON e2.emp_id = b.manager_id



-----Create a Table of Books with Rental Price Above a Certain Threshold

Select *
into expensive_books 
from dbo.books
WHERE rental_price > 7.00

----  Retrieve the List of Books Not Yet Returned

SELECT * FROM issued_status as ist
LEFT JOIN
return_status as rs
ON rs.issued_id = ist.issued_id
WHERE rs.return_id IS NULL;


